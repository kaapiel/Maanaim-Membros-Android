<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/textSelecione"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"
        android:gravity="center_horizontal"
        android:text="Selecione a versão \nda bíblia"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="25sp"
        tools:ignore="HardcodedText" />

    <RadioGroup
        android:id="@+id/radios"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textSelecione"
        android:layout_gravity="right"
        android:layout_marginTop="18dp"
        android:inputType="text"
        android:orientation="vertical" >

        <RadioButton
            android:id="@+id/ARC"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:button="@null"
            android:drawablePadding="30dp"
            android:drawableRight="@android:drawable/btn_radio"
            android:gravity="center_vertical"
            android:text="\tARC - Almeida revista e corrigida"
            android:textSize="20sp" 
            tools:ignore="HardcodedText"/>

        <RadioButton
            android:id="@+id/ARA"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:button="@null"
            android:drawablePadding="30dp"
            android:drawableRight="@android:drawable/btn_radio"
            android:gravity="center_vertical"
            android:text="\tARA - Almeida revista e atualizada"
            android:textSize="20sp" 
            tools:ignore="HardcodedText"/>

        <RadioButton
            android:id="@+id/ACF"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:button="@null"
            android:drawablePadding="30dp"
            android:drawableRight="@android:drawable/btn_radio"
            android:gravity="center_vertical"
            android:text="\tACF - Almeida corrigida fiel "
            android:textSize="20sp" 
            tools:ignore="HardcodedText"/>

        <RadioButton
            android:id="@+id/NVI"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:button="@null"
            android:drawablePadding="30dp"
            android:drawableRight="@android:drawable/btn_radio"
            android:gravity="center_vertical"
            android:text="\tNVI - Nova versão internacional"
            android:textSize="20sp"
            tools:ignore="HardcodedText" />

        <RadioButton
            android:id="@+id/NTLH"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:button="@null"
            android:drawablePadding="30dp"
            android:drawableRight="@android:drawable/btn_radio"
            android:gravity="center_vertical"
            android:text="\tNTLH - Nova tradução na linguagem de hoje"
            android:textSize="20sp"
            tools:ignore="HardcodedText" />

    </RadioGroup>

    <Button
        android:id="@+id/BotaoIrVersao"
        style="@style/ButtonText"
        android:layout_width="270dp"
        android:layout_height="40dp"
        android:layout_below="@+id/radios"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="44dp"
        android:background="@drawable/button_states_orange"
        android:text="Ir"
        tools:ignore="HardcodedText" />

</RelativeLayout>