<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <Spinner
        android:id="@+id/spinnerUnidadeMaps"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/buttonTodosMembros"
        android:layout_marginTop="35dp" />

    <TextView
        android:id="@+id/textViewNomeMembro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/botaoSelecionarUnidade"
        android:layout_marginRight="34dp"
        android:layout_marginTop="38dp"
        android:text="Todos membros"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <Button
        android:id="@+id/buttonTodosMembros"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textViewNomeMembro"
        android:layout_alignParentRight="true"
        android:layout_marginRight="50dp"
        android:text="OK" />

    <Button
        android:id="@+id/botaoSelecionarUnidade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spinnerUnidadeMaps"
        android:layout_centerHorizontal="true"
        android:text="Selecionar cÃ©lula" />

</RelativeLayout>
