<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1C1C1C" >

    <TextView
        android:id="@+id/textViewPresencaNasCelulas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="Estatísticas das células"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#FFFFFF"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/textViewSelecioneAcelula"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textViewPresencaNasCelulas"
        android:layout_below="@+id/textViewPresencaNasCelulas"
        android:layout_marginTop="30dp"
        android:text="Região Vermelha: "
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#FF0000"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/txtEventosHoje"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textViewSelecioneAcelula"
        android:layout_below="@+id/textViewSelecioneAcelula"
        android:layout_marginTop="30dp"
        android:text="Região Branca: "
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#FFFFFF"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/TextView02"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txtEventosHoje"
        android:layout_below="@+id/txtEventosHoje"
        android:layout_marginTop="30dp"
        android:text="Região Amarela: "
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#FFF700"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/TextView03"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/TextView02"
        android:layout_below="@+id/TextView02"
        android:layout_marginTop="30dp"
        android:text="Região Laranja: "
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#FF9100"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/TextView04"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/TextView03"
        android:layout_below="@+id/TextView03"
        android:layout_marginTop="30dp"
        android:text="Região Azul: "
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#0084FF"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/TextView05"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/TextView04"
        android:layout_below="@+id/TextView04"
        android:layout_marginTop="30dp"
        android:text="Região Verde: "
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#16E100"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/textViewSelecioneReuniao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/TextView05"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="17dp"
        android:text="TOTAL"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/qtdVermelha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/txtEventosHoje"
        android:layout_toRightOf="@+id/textViewSelecioneReuniao"
        android:textColor="#FFFFFF"
        android:text="XX" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/textViewPresencaNasCelulas"
        android:layout_alignTop="@+id/textViewSelecioneAcelula"
        android:textColor="#FFFFFF"
        android:text="Células" />

    <TextView
        android:id="@+id/TextView06"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/TextView02"
        android:layout_alignLeft="@+id/textView5"
        android:textColor="#FFFFFF"
        android:text="Células" />

    <TextView
        android:id="@+id/qtdBranca"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/TextView02"
        android:layout_alignLeft="@+id/qtdVermelha"
        android:textColor="#FFFFFF"
        android:text="XX" />

    <TextView
        android:id="@+id/qtdAmarela"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/TextView03"
        android:layout_alignLeft="@+id/qtdBranca"
        android:textColor="#FFFFFF"
        android:text="XX" />

    <TextView
        android:id="@+id/qtdLaranja"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/TextView04"
        android:layout_alignLeft="@+id/qtdAmarela"
        android:textColor="#FFFFFF"
        android:text="XX" />

    <TextView
        android:id="@+id/qtdAzul"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/qtdLaranja"
        android:layout_alignTop="@+id/TextView04"
        android:textColor="#FFFFFF"
        android:text="XX" />

    <TextView
        android:id="@+id/qtdVerde"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/qtdAzul"
        android:layout_alignTop="@+id/TextView05"
        android:textColor="#FFFFFF"
        android:text="XX" />

    <TextView
        android:id="@+id/TextView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/TextView03"
        android:layout_alignLeft="@+id/TextView06"
        android:textColor="#FFFFFF"
        android:text="Células" />

    <TextView
        android:id="@+id/TextView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/qtdLaranja"
        android:layout_alignBottom="@+id/qtdLaranja"
        android:layout_alignLeft="@+id/TextView12"
        android:textColor="#FFFFFF"
        android:text="Células" />

    <TextView
        android:id="@+id/TextView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/TextView05"
        android:layout_alignLeft="@+id/TextView13"
        android:textColor="#FFFFFF"
        android:text="Células" />

    <TextView
        android:id="@+id/TextView15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textViewSelecioneReuniao"
        android:layout_alignLeft="@+id/TextView14"
        android:textColor="#FFFFFF"
        android:text="Células" />

    <TextView
        android:id="@+id/qtdTotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/TextView16"
        android:layout_alignBottom="@+id/TextView16"
        android:layout_marginRight="18dp"
        android:layout_toLeftOf="@+id/textViewSelecioneReuniao"
        android:textColor="#FFFFFF"
        android:text="XX"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/TextView16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewSelecioneReuniao"
        android:layout_marginTop="17dp"
        android:layout_toRightOf="@+id/TextView05"
        android:text="Células"
        android:textColor="#FFFFFF"
        android:textSize="30sp" />

</RelativeLayout>