<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".Login" >

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/imgFundoLogin"
            android:layout_width="match_parent"
            android:layout_height="567dp"
            android:contentDescription="descriacao da imagem aqui"
            android:scaleType="fitXY"
            tools:ignore="HardcodedText" />

        <EditText
            android:id="@+id/editTextUsuario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/BotaoLogin"
            android:layout_alignRight="@+id/BotaoLogin"
            android:layout_marginTop="240dp"
            android:ems="10"
            android:inputType="textPersonName" >

            <requestFocus />
        </EditText>

        <EditText
            android:id="@+id/editTextSenha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/BotaoLogin"
            android:layout_alignRight="@+id/BotaoLogin"
            android:layout_below="@+id/editTextUsuario"
            android:layout_marginTop="20dp"
            android:ems="10"
            android:inputType="textPassword" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/editTextUsuario"
            android:layout_alignTop="@+id/editTextUsuario"
            android:src="@drawable/ic_action_membro"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/siteLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/BotaoLogin"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="100dp"
            android:text="Acesse o site da Maanaim"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/BotaoLogin"
            style="@style/ButtonText"
            android:layout_width="270dp"
            android:layout_height="40dp"
            android:layout_alignRight="@+id/imageView1"
            android:layout_below="@+id/checkBoxLembrarDados"
            android:layout_marginTop="20dp"
            android:background="@drawable/button_states_orange"
            android:text="Login"
            tools:ignore="HardcodedText" />

        <CheckBox
            android:id="@+id/checkBoxLembrarDados"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/editTextSenha"
            android:layout_below="@+id/editTextSenha"
            android:shadowColor="@color/black"
            android:shadowDx="3"
            android:shadowDy="3"
            android:shadowRadius="1"
            android:text="Lembrar dados"
            android:textColor="@color/Azure"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/txtEventosHoje"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/BotaoLogin"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="6dp"
            android:shadowColor="@color/black"
            android:shadowDx="3"
            android:shadowDy="3"
            android:shadowRadius="1"
            android:text="ou"
            android:textColor="@color/Azure"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/botaoLoginVisitante"
            style="@style/ButtonText"
            android:layout_width="270dp"
            android:layout_height="40dp"
            android:background="@drawable/button_states_orange"
            android:text="Logar como visitante/membro"
            tools:ignore="HardcodedText"
            android:layout_below="@+id/txtEventosHoje"
            android:layout_alignRight="@+id/imageView3"
            android:layout_alignEnd="@+id/imageView3"
            android:layout_alignLeft="@+id/BotaoLogin"
            android:layout_alignStart="@+id/BotaoLogin" />

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="48dp"
            android:src="@drawable/logo"
            tools:ignore="ContentDescription" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/editTextSenha"
            android:layout_alignRight="@+id/editTextSenha"
            android:src="@drawable/mapp_ic_cadeado_aberto"
            tools:ignore="ContentDescription" />

    </RelativeLayout>

</ScrollView>